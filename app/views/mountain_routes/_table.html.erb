<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table
          class="min-w-full text-left text-sm font-light text-surface dark:text-white">
          <thead
            class="border-b border-neutral-200 bg-white font-medium dark:border-white/10 dark:bg-body-dark">
            <tr>
              <th scope="col" class="px-6 py-4"><abbr title="Data">Data</abbr></th>
              <th scope="col" class="px-6 py-4">Nazwa</th>
              <th scope="col" class="px-6 py-4"><abbr title="Rejon">Rejon</abbr></th>
              <th scope="col" class="px-6 py-4"><abbr title="Trudność">Trudność</abbr></th>
              <th scope="col" class="px-6 py-4"><abbr title="Długość">Długość</abbr></th>
              <th scope="col" class="px-6 py-4"><abbr title="Ubezpieczona">Ubezpieczona</abbr></th>
              <th scope="col" class="px-6 py-4"><abbr title="Wielowyciągowa">Wielowyciągowa</abbr></th>
            </tr>
          </thead>
          <tbody>
            <% @mountain_routes.each do |mountain_route| %>

              <tr class="border-b border-neutral-200 bg-black/[0.02] dark:border-white/10">
                <th class="whitespace-nowrap px-6 py-4 font-medium"><%= mountain_route.activity_date %></th>
                <td class="whitespace-nowrap px-6 py-4"><%= link_to mountain_route.name, mountain_route %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= mountain_route.area %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= mountain_route.french_difficulty %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= mountain_route.length %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= I18n.t(mountain_route.equipped?) %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= I18n.t(mountain_route.multipitch?) %></td>
                <td>
                  <div>
                    <% if policy(mountain_route).edit? %>
                      <%= link_to edit_mountain_route_path(mountain_route), class: '' do %>
                        <span class="icon is-small">Edytuj<i class=""></i></span>
                      <% end %>
                      <%= button_to mountain_route, method: :delete, data: { confirm: I18n.t('.are_you_sure') }, class: '' do %>
                        <span class="icon is-small">Usuń<i class=""></i></span>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
