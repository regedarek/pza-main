<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing user</h1>

  <%= render "form", user: @user %>

  <div class='flex items-center justify-between mt-5'>
  <%= link_to "Zobacz", [:admin, @user], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= button_to "Usuń", admin_user_path(@user), method: :delete, data: { confirm: "Jesteś pewnien?" }, class: "rounded-lg py-3 ml-2 px-5 bg-red-500 inline-block font-medium" %>
  <%= link_to "Powrót", admin_users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
</div>
