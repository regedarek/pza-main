<%= render 'shared/flash' %>
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <%= form_with model: @user, url: password_reset_path, input_html: { class: "space-y-6" } do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.email_field :email, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, autocomplete: "email" %>
      </div>
    </div>

    <div>
      <button type="submit" class="flex w-full justify-center rounded-md bg-gray-600 mt-2 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><%= t('.submit') %></button>
    </div>
  <% end %>

  <p class="mt-10 text-center text-sm text-gray-500">
    <%= t('no_account') %>
    <%= link_to t('sign_up'), new_registration_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
  </p>
</div>
