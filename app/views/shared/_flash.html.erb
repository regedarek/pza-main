<% if notice %>
  <div class='relative flex px-4 py-3 space-x-2 border bg-green-100 border-green-400 text-green-700' role='alert'>
    <strong class='font-bold'><%= notice %></strong>
    <span class='pl-5'>
      <%= heroicon 'x-mark', options: { class: 'w-6 h-6 fill-current', role: 'button' } %>
    </span>
  </div>
<% end %>

